@model EduFlex.Models.Parent

<h2>Delete Parent</h2>

<h4>Are you sure you want to delete this parent?</h4>
<div>
    <h5>@Model.FirstName @Model.LastName</h5>
    <p>Email: @Model.Email</p>
    <p>Phone Number: @Model.PhoneNumber</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Parent" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
