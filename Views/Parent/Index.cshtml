@model List<EduFlex.Models.Parent>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Parents</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Parent" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> Create a Parent
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var parent in Model)
            {
                <tr>
                    <td>@parent.FirstName</td>
                    <td>@parent.LastName</td>
                    <td>@parent.Email</td>
                    <td>@parent.PhoneNumber</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@parent.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@parent.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
