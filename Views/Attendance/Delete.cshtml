@model EduFlex.Models.Attendance

<h2>Delete Attendance</h2>

<h4>Are you sure you want to delete this attendance record?</h4>
<div>
    <h5>Student: @Model.Student?.FirstName @Model.Student?.LastName</h5>
    <p>Course: @Model.Course?.Name</p>
    <p>Date: @Model.Date.ToShortDateString()</p>
    <p>Present: @(Model.IsPresent ? "Yes" : "No")</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Attendance" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
