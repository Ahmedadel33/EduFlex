@model List<EduFlex.Models.Attendance>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Attendance Records</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Attendance" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> Create Attendance
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Student</th>
                <th>Course</th>
                <th>Date</th>
                <th>Present</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var attendance in Model)
            {
                <tr>
                    <td>@attendance.Student?.FirstName @attendance.Student?.LastName</td>
                    <td>@attendance.Course?.Name</td>
                    <td>@attendance.Date.ToShortDateString()</td>
                    <td>@(attendance.IsPresent ? "Yes" : "No")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@attendance.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@attendance.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
