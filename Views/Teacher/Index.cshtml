@model List<EduFlex.Models.Teacher>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Teachers</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Teacher" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> Create a Teacher
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Hire Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.FirstName</td>
                    <td>@teacher.LastName</td>
                    <td>@teacher.Email</td>
                    <td>@teacher.HireDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
