@model List<EduFlex.Models.Course>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Courses</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Course" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> Create a Course
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Course Code</th>
                <th>Credits</th>
                <th>Assigned Teacher</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Name</td>
                    <td>@course.Code</td>
                    <td>@course.Credits</td>
                    <td>@course.Teacher?.FirstName @course.Teacher?.LastName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
