@model EduFlex.Models.Course

<h2>Delete Course</h2>

<h4>Are you sure you want to delete this course?</h4>
<div>
    <h5>@Model.Name</h5>
    <p>Course Code: @Model.Code</p>
    <p>Credits: @Model.Credits</p>
    <p>Assigned Teacher: @Model.Teacher?.FirstName @Model.Teacher?.LastName</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Course" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
